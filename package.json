{
  "name": "skibot",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec \"npx tsc && node --enable-source-maps dist/index.js\"",
    "build": "npx tsc",
    "build-dashboard": "cd frontend && npm run build",
    "start": "npx tsc && nodemon --exec node dist/index.js",
    "create-plugin": "node scripts/create-plugin.js",
    "install-dependencies": "node scripts/install-dependencies.js"
  },
  "author": "unify-z <i@itify.top>",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@tsconfig/node20": "^20.1.4",
    "async": "^3.2.6",
    "axios": "^1.7.9",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express-async-errors": "^3.1.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-schedule": "^2.1.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "readline": "^1.3.0",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/connect-timeout": "^0.0.39",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "connect-timeout": "^1.9.0",
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.3",
    "nodemon": "^3.1.9"
  },
  "nodemonConfig": {
    "watch": [
      "bot/",
      "config/",
      "plugins/",
      "./",
      "routes"
    ],
    "ext": "ts yml json",
    "ignore": [
      "dist/",
      "data/",
      "frontend"
    ]
  }
}
