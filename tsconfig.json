{
  "extends": ["@tsconfig/node20"],
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": false
  },
  "exclude": [
    "node_modules",
    "public/**/*",
    "plugins",
    "dist",
    "scripts"
  ]
}